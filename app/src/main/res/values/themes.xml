<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E4E4E4</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/windowLightBackground</item>
        <item name="colorBackgroundFloating">@color/windowLightBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorSurface">@color/windowLightBackground</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/middle_gray</item>

    </style>
</resources>