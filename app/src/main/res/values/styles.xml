<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Text Appearances-->
    <style name="BigBoldText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="BoldHeaderText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="RegularHeaderText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MiddleLightText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="MiddleBoldText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallLRegularText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ComingItemHeadText" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">18sp</item>
    </style>


<!--    Shape Appearances-->
    <style name="ShapeAppearanceOverlay.RoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.BottomLeftRoundedCorner">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">26dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.CircleShape">
        <item name="cornerSize">50%</item>
    </style>
</resources>