<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:clipToPadding="false"
        android:clipChildren="false">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/coming_card"
            android:layout_width="100dp"
            android:layout_height="140dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/coming_soon_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/coming_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Spider-Man: Far From Home"
            android:maxLines="2"
            android:ellipsize="end"
            android:textAppearance="@style/ComingItemHeadText"
            android:layout_marginStart="@dimen/item_text_start_margin"
            app:layout_constraintLeft_toRightOf="@id/coming_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/coming_item_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="2020-03-12"
            android:textAppearance="@style/MiddleLightText"
            android:layout_marginStart="@dimen/item_text_start_margin"
            app:layout_constraintTop_toBottomOf="@id/coming_item_title"
            app:layout_constraintLeft_toRightOf="@id/coming_card"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/coming_item_genre_flow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/coming_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coming_item_date"
            app:layout_constraintBottom_toTopOf="@id/coming_item_description"
            app:layout_constraintVertical_chainStyle="packed"
            app:flow_horizontalStyle="packed"
            android:layout_marginStart="8dp"
            app:flow_horizontalBias="0"
            app:flow_verticalBias="0"
            app:flow_wrapMode="chain"
            app:flow_verticalGap="4dp"
            app:flow_horizontalGap="8dp"
            app:constraint_referenced_ids="item_gene_one, item_gene_two, item_gene_three"/>

        <TextView
            android:id="@+id/item_gene_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Action"
            android:paddingVertical="2dp"
            android:paddingHorizontal="6dp"
            android:background="@drawable/gene_background"
            android:textAppearance="@style/SmallLRegularText"
            android:textColor="@color/gray_aaa"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/item_gene_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Science fiction"
            android:paddingVertical="2dp"
            android:paddingHorizontal="6dp"
            android:background="@drawable/gene_background"
            android:textAppearance="@style/SmallLRegularText"
            android:textColor="@color/gray_aaa"
            android:visibility="gone"
            tools:visibility="visible"/>
        <TextView
            android:id="@+id/item_gene_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Comedy"
            android:paddingVertical="2dp"
            android:paddingHorizontal="6dp"
            android:background="@drawable/gene_background"
            android:textAppearance="@style/SmallLRegularText"
            android:textColor="@color/gray_aaa"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/coming_item_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_text_start_margin"
            tools:text="@string/lorem"
            android:maxLines="3"
            android:textAppearance="@style/SmallLRegularText"
            android:ellipsize="end"
            app:layout_constraintLeft_toRightOf="@id/coming_card"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coming_item_genre_flow"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>