<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MovieApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#1D1A1B</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/windowDarkBackground</item>
        <item name="colorBackgroundFloating">@color/windowDarkBackground</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorSurface">@color/windowDarkBackground</item>
        <!-- Customize your theme here. -->

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/middle_gray</item>
    </style>
</resources>